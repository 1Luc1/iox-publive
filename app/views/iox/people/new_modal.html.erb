<%= form_for @person, remote: true, html: { class: 'iox-win-auth-form'} do |f| %>

  <div class="content-padding">

    <div class="field-box">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'js-get-focus' %>
      <% if @help_txt %><br /><span class="mini-desc"><%= @help_txt %></span><% end %>

      <%= hidden_field_tag(:skip_edit, true) if params[:skip_edit] %>
      <%= f.submit '', style: 'display:none' %>
    </div>
    <div class="field-box">
      <%= f.label :email %>
      <%= f.text_field :email %>
      <br /><span class="mini-desc"><%= t('person.email_required') %></span>
    <div class="field-box">

    <% if @found && @found.size > 0 %>
      <p class="desc"><%= t('people.found', count: @found.size) %></p>
      <ul class="list">
        <% @found.each do |person| %>
          <li><a href="#" onclick="crewEntry.set('person_id', <%= person.id %>);crewEntry.set('name','<%= person.name %>');iox.Win.closeVisible();"><%= person.name %></a></li>
        <% end %>
      </ul>
    <% end %>

  </div>

  <div class="iox-win-footer">
    <button type="submit" class="btn btn-primary"><%= t('create') %></button>
    <button class="btn" data-close-win="true"><%= t('cancel') %></button>
  </div>

<% end %>
